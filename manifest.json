{
  "manifest_version": 2,

  "name": "Vine Controls",
  "description": "Automatically show Vine controls",
  "version": "0.1.2",
  "icons": {
    "128": "icon128.png"
  },
  
  "background": {
	"scripts": ["background.js"]
  },
  
  "content_scripts": [
	{
		"run_at": "document_end",
		"matches": ["*://vine.co/*"],
		"js": ["jquery-1.11.2.min.js", "vineControls.js"]
    }
  ],
  "permissions": [
	"activeTab",
	"*://vine.co/*",
	"*://*.vine.co/*",
	"storage"
  ]
}